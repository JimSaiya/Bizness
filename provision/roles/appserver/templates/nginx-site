upstream biznesscluster {
    {% for host in groups['appservers'] %}
     server {{ host }}:10001;
    {% endfor %}
}

server {
        listen 0.0.0.0:80;
        server_name *;

        access_log /var/log/nginx/bizness_access.log;
        error_log /var/log/nginx/bizness_error.log;

        location /static/ {
                alias /vagrant/BiznessWeb/static/;
                expires 48h;
        }

        set $home /vagrant;
        client_max_body_size 5M;
        location / {
          if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Credentials' 'true';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Accept';
          }

          if ($request_method = 'POST') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Credentials' 'true';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Accept';
          }


          # the socket an port your wsgi daemon listens on
          uwsgi_read_timeout 1300;
          uwsgi_pass biznesscluster;
          include uwsgi_params;
          root $home;
        }
}